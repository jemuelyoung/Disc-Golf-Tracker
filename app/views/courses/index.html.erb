<div class="center">
<h1>Courses</h1>

<table class="index_table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= button_to 'Show', course, :method => :get %></td>
    <td><%= button_to 'Edit', edit_course_path(course), :method => :get %></td>
    <td><%= button_to 'Destroy', course, method: :delete, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Course', new_course_path %>
</div>