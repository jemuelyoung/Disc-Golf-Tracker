<div class="center">
<h1>Players</h1>

<table class="index_table">
  <tr>
    <th>Name</th>
    <th>Region</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <% if user.region %>
    	<td><%= user.region.name %></td>
    <% else %>
    	<td></td>
    <% end %>
    <td><%= button_to 'Show', user %></td>
    <td><%= button_to 'Edit', edit_user_path(user) %></td>
    <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
</div>
